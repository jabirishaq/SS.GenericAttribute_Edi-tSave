@model SmartStore.Web.Models.Common.AddressModel
    @if (Model != null)
    {
    <div class="row">
        <div class="col-lg-4">
            <div class="name pb-2">
                <strong>
                    <span class="bidi-embed">@Model.FirstName</span>
                    <span class="bidi-embed">@Model.LastName</span>
                </strong>
            </div>
            <div class="email">
                <span>@T("Address.Fields.Email"):</span>
                <span>@Model.Email</span>
            </div>
            @if (Model.PhoneEnabled)
            {
                <div class="phone">
                    <span>@T("Address.Fields.PhoneNumber"):</span>
                    <span>@Model.PhoneNumber</span>
                </div>
            }
            @if (Model.FaxEnabled && !String.IsNullOrEmpty(Model.FaxNumber))
            {
                <div class="fax">
                    <span>@T("Address.Fields.FaxNumber"):</span>
                    <span>@Model.FaxNumber</span>
                </div>
            }
        </div>
        <div class="col-lg-4">
            @Html.Raw(Model.FormattedAddress)
        </div>
    </div>
    }
    
