@model ShoppingCartModel
@using SmartStore.Web.Models.ShoppingCart;

@{
    var approvalPluginSettings = (SmartStore.Admin.Models.Approvals.ApprovalPluginSettings)ViewData["approvalPluginSettings"];
}

@if (!String.IsNullOrWhiteSpace(Model.CustomerComment))
{
    <div class="comment-box card mb-3">
        <div class="card-header h5">
            @if (approvalPluginSettings != null)
            {
                <span>Customer Comments</span>
            }
            else
            {
                <span>Comments</span>
            }
        </div>
        <div class="card-block">
            @Model.CustomerComment
        </div>
    </div>
}

@if (approvalPluginSettings != null)
{
    <div class="comment-box card mb-3">
        <div class="card-header h5">
            @*@T("ShoppingCart.CommentBox")*@
            Comments for rejecting/approving
        </div>
        <div class="card-block">
            @Html.TextArea("ApprovalComments", "", new { placeholder = (approvalPluginSettings.RequireCommentOnEditRejection || approvalPluginSettings.RequireCommentOnEditApprove) ? "Required when rejecting or approving with edits made" : "Optional", @class = "form-control" })
        </div>
    </div>
}