@model Telerik.Web.Mvc.GridModel<SmartStore.Admin.DBManager.Models.DBDetailModel>
	@using Telerik.Web.Mvc.UI;

	@(Html.Telerik().Grid<SmartStore.Admin.DBManager.Models.DBDetailModel>()
	.Name("dbdetail-grid")
	.BindTo(Model.Data)
	.Columns(columns =>
	{
		columns.Bound(x => x.Id)
		.Width(60)
		.Title("#")
		.HeaderHtmlAttributes(new { style = "text-align:center" })
		.HtmlAttributes(new { align = "left", style = "text-align:center", @class = "omega" });

		columns.Bound(x => x.Name);
		//.Width(80);
		columns.Bound(x => x.DataType);
		columns.Bound(x => x.DataSize);
		columns.Bound(x => x.AllowNull);
		columns.Bound(x => x.Index);

		columns.Bound(x => x.Id)
		.Template(x => Html.ActionLink("Delete", "../DBManager/DeleteTableColumns", new { ColumnName = x.Name, tableName = @ViewBag.tableName }, new { @class = "btn btn-danger" , onclick="Confirm()" }))
		.Width(50)
		.Filterable(false)
		.Title(String.Empty)
		.HtmlAttributes(new {@class = "omega" });

	})
	.EnableCustomBinding(true))
	<script>
		function Confirm() {
		if (!confirm("Are you sure to continue?")) {
			event.preventDefault();
		}
	}
</script>