@model Telerik.Web.Mvc.GridModel<SmartStore.Admin.DBManager.Models.DBManagerModel>
	@using Telerik.Web.Mvc.UI;
	@(Html.Telerik().Grid<SmartStore.Admin.DBManager.Models.DBManagerModel>()
			.Name("dbmanager-grid")
			.BindTo(Model.Data)
			.Columns(columns =>
			{
				columns.Bound(x => x.Id)
				.Width(100)
				.Title("#")
				.HeaderHtmlAttributes(new { style = "text-align:center" })
				.HtmlAttributes(new { align = "left", style = "text-align:center", @class = "omega" });

				columns.Bound(x => x.TableName)
				.HtmlAttributes(new { style = "text-align:left; width: 300px", @class = "omega" });

	columns.Bound(x => x.Id)
				.Template(x => Html.ActionLink("View Data", "../DBManager/DataDetail", new { tableName = x.TableName }, new { @class = "t-button btn btn-success button-edit" }))
				.Filterable(false)
				.Title(String.Empty)
				.HtmlAttributes(new { style = "text-align:left; width: 50px;", @class = "omega" });

				columns.Bound(x => x.Id)
				.Template(x => Html.ActionLink("View Columns", "../DBManager/Detail", new { tableName = x.TableName }, new { @class = "t-button btn btn-success button-edit" }))
				.Filterable(false)
				.Title(String.Empty)
				.HtmlAttributes(new { style = "text-align:left", @class = "omega" });

				columns.Bound(x => x.Id)
				.Template(x => Html.ActionLink("Delete", "../DBManager/DeleteTable", new { tableName = x.TableName }, new { @class = "btn btn-danger", onclick = "Confirm()" }))
				.Filterable(false)
				.Title(String.Empty)
				.HtmlAttributes(new { style = "text-align:left", @class = "omega" });

			})
			.EnableCustomBinding(true))
	<script>
		function Confirm() {
		if (!confirm("Are you sure to continue?")) {
			event.preventDefault();
		}
	}
	</script>
