@model SmartStore.Web.Models.Catalog.BundleProductProgressIndicatorModel
@if (Model.TotalSteps > 1)
{
    <div class="costeps row no-gutters">
        @for (int i = 1; i <= Model.TotalSteps; i++)
        {
            string stateClass = null;
            if (Model.CurrentStep == i)
            {
                stateClass = "active";
            }
            else if (i < Model.CurrentStep)
            {
                stateClass = "visited";
            }
            else
            {
                stateClass = "inactive";
            }
            <div class="col-2 costep @stateClass" data-step="@i">
                <a class="costep-link">
                    <i class="costep-icon"></i>
                    <span class="costep-label">Step @i</span>
                </a>
            </div>
        }
    </div>
}